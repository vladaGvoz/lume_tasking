<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Pale yellow background -->
    <solid android:color="#FFF9C4"/> <!-- soft pale yellow -->

    <!-- Rounded corners -->
    <corners android:radius="12dp"/>

    <!-- Thin purple border -->
    <stroke
        android:width="1dp"
        android:color="#800080"/> <!-- purple -->

    <!-- Inner padding -->
    <padding
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp"/>
</shape>
