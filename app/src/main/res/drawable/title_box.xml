<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="@color/card_background"/>

    <!-- Rounded corners -->
    <corners android:radius="12dp"/>

    <!-- Border -->
    <stroke
        android:width="1dp"
        android:color="@color/card_border"/>

    <!-- Inner padding -->
    <padding
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp"/>
</shape>
