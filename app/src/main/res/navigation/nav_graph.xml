<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/taskListFragment">

    <!-- Destination 1: The Main Task List -->
    <fragment
        android:id="@+id/taskListFragment"
        android:name="com.example.loom.ui.TaskListFragment"
        android:label="Loom - Tasks"
        tools:layout="@layout/fragment_task_list">

        <!-- Action to go to the Detail Fragment (Add or Edit) -->
        <action
            android:id="@+id/action_taskListFragment_to_taskDetailFragment"
            app:destination="@id/taskDetailFragment" />
    </fragment>

    <!-- Destination 2: Add/Edit Task Screen -->
    <fragment
        android:id="@+id/taskDetailFragment"
        android:name="com.example.loom.ui.TaskDetailFragment"
        android:label="{title}"
        tools:layout="@layout/fragment_task_detail">

        <!-- Argument definition for passing the Task ID during Edit operations -->
        <argument
            android:name="taskId"
            android:defaultValue="-1"
            app:argType="integer" />
    </fragment>
</navigation>